<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    
    <RadioGroup
        android:id="@+id/dialog_select_playername" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </RadioGroup>

    <EditText
        android:id="@+id/dialog_player_name"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_select_playername"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/dialog_one_player_hint" />

    <Button
        android:id="@+id/dialog_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_player_name"
        android:text="@string/dialog_enter" />

    <Button
        android:id="@+id/dialog_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dialog_ok"
        android:layout_toRightOf="@+id/dialog_ok"
        android:text="@string/dialog_cancel" />

</RelativeLayout>